{{> head}} <!--head partial has style and titles-->
<div class="container mt-5"> <!--bootstrap -->
  <header>
    <h1>Login</h1> <!--page header-->
  </header>

  {{#if message}}
    <div class="alert alert-success">
      <p>{{message}}</p>
      <a href="/register" class="btn btn-navbar-green">Register</a>
    </div>
  {{/if}}
  
  <!--login form goes to posts data to the login route -->
  {{#if showLoginForm}}
    <form action="/login" method="POST">
      <div class="form-group"> <!--form group for username input -->
        <label class="form-label" for="username">Username:</label> <!--label for username input-->
        <input class="form-control" type="text" name="username" id="username" required> <!--trxt input for username-->
        <br>
        <label class="form-label" for="password">Password:</label> <!--label for password input -->
        <input class="form-control" type="password" name="password" id="password" required> <!-- text input for password -->
        <br>
      </div>
      <button type="submit" class="btn btn-navbar-green">Login</button> <!--button has bootstrap-->
      <div class="mt-3"> <!--register linkcontainter-->
        <p>Don't have an account? <a href="/register" style="color: #9DC183;">Register</a></p> <!--link to register page-->
      </div>
    </form>
  {{/if}}
</div>

