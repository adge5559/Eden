{{> head}}
<div class="editmain">
    <h1>Edit Profile</h1>
    <!-- Form to update user bio -->
    <form action="/editprofile" method="POST" enctype="multipart/form-data">
        <div class="form-group">
            <label for="username" class="form-label">Username</label>
            <input class="form-control" id="username" type="text" placeholder={{user.username}} disabled>
            <!-- Current user bio -->
            <label for="bio" class="form-label">About me</label>
            <textarea class="form-control" id="bio" name="bio" rows="3">{{user.bio}}</textarea>
            <br>
            <label for="pfp" class="form-label">Profile Picture</label>
            <input type="file" id="pfp" name="pfp" accept="image/*">
            <button type="submit" class="btn btn-navbar-green">Update Profile</button>
        </div>
    </form>
</div>