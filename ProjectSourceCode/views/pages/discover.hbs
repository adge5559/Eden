<div class="container">
  <h2>Welcome to Eden</h2>

  <form action="/search" method="GET" class="mb-4">
    <div class="input-group">
      <input type="text" name="query" class="form-control" placeholder="Search for plants" aria-label="Search" aria-describedby="button-search" required>
      <button class="btn btn-primary" type="submit" id="button-search">Search</button>
    </div>
  </form>

  <div class="row">
    {{#each plants}}
    <div class="col-md-4">
      <div class="card mb-4">
        <img src="{{imagepath}}" class="card-img-top" alt="{{name}}" onerror="this.src='/images/default-plant.jpg'">
        <div class="card-body">
          <h5 class="card-title">{{name}}</h5>
          <p class="card-text">{{description}}</p>
        </div>
      </div>
    </div>
    {{else}}
    <div class="col-md-4">
      <p>No plants found.</p>
    </div>
    {{/each}}
  </div>
</div>